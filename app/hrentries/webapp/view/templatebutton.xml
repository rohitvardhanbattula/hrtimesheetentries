<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    controllerName="timesheet.controller.MainView">

    <VBox>
        
        <List id="templateButtonList">
            <items>
                <ObjectListItem
                    type="Active"
                    press="onTemplateButtonClick">
                    <title>{TemplateId}</title>
                </ObjectListItem>
            </items>
        </List>

       
        <TextField id="employeeID" placeholder="Employee ID" />
        <DatePicker id="date" placeholder="Date" />
        <Input id="wbse" placeholder="WBSE" />
        <Input id="recordedHours" placeholder="Recorded Hours" />
    </VBox>
</mvc:View>